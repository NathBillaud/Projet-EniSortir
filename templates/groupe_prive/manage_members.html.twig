{% extends 'base.html.twig' %}

{% block title %}Modifier groupe{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-8">

            <h1>Modifier ce groupe privé : {{ groupePrive.nom }}</h1>
            <div class="">
                <strong>Membres présents :</strong>
                {% for user in groupePrive.user %}
                    <div> {{ user.nomComplet }} </div>
                {% else %}
                    <p>Aucun membre</p>
                {% endfor %}
            </div>
            <div>
                {{ form_start(groupeprive_form) }}

                {{ form_row(groupeprive_form.user, {'attr': {'class': 'select2'}}) }}

                <button type="submit" name="submit_groupe_prive_update" class="btn btn-success">Modifier</button>
                <button type="button" onclick="window.location.href='{{ path('groupe_prive') }}'" class="btn btn-secondary">Retour</button>
                {{ form_widget(groupeprive_form.nom, {'attr':{'hidden' : true} }) }}

                {{ form_end(groupeprive_form) }}

            </div>
        </div>
    </div>


{% endblock %}