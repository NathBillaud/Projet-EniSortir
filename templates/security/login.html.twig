{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}
            </div>
        {% endif %}

        <div class="row justify-content-center">
            <div class="col-6">
        <label for="username">Identifiant</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
               autocomplete="email" required autofocus>
        <label for="password">Mot de Passe</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
               required>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
               value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me">
            <label for="_remember_me">Se Souvenir de moi</label>
            <br>
            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
        </div>


        <button class="btn btn-success" type="submit">
            Connexion
        </button>
            </div>
        </div>
    </form>
{% endblock %}
